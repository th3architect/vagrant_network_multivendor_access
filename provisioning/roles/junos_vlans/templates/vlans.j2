{% if junos_vlans is defined %}
vlans {
{% for vlan in junos_vlans %}
    {{ vlan.name }} {
{% if vlan.description is defined %}
        description {{ vlan.description }};
{% endif %}
{% if vlan.vlan_id is defined %}
        vlan-id {{ vlan.vlan_id }};
{% endif %}
{% if vlan.layer_3_interface is defined %}
        l3-interface {{ vlan.layer_3_interface }};
{% endif %}
    }
{% endfor %}
}
{% endif %}
